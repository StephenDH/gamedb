<h1>Listing genres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, genre %></td>
        </td>
      </tr>
      <tr>
        <td>
          <ul>
            <% genre.games.each do |game| %>
            <li>
              <%= link_to game.name, game %>
            </li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>  
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path %>
